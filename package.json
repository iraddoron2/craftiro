{
    "name": "craftiro",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev --parallel",
        "build": "turbo run build",
        "build:packages": "turbo run build --filter=@craftiro/design-tokens --filter=@craftiro/ui --filter=@craftiro/ui-composites",
        "build:web": "turbo run build --filter=@apps/web",
        "start": "turbo run start --parallel",
        "lint": "turbo run lint"
    },
    "devDependencies": {
        "@types/node": "^20",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "style-dictionary": "^3.9.2",
        "tsup": "^8.0.0",
        "turbo": "^2.0.0",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@craftiro/ui": "workspace:^",
        "@craftiro/ui-composites": "workspace:^",
        "@craftiro/design-tokens": "workspace:^",
        "clsx": "^2.1.1"
    }
}
