{
    "name": "@craftiro/ui",
    "version": "0.1.0",
    "private": false,
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts --clean",
        "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
        "lint": "eslint \"src/**/*.{ts,tsx}\""
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "dependencies": {
        "@craftiro/design-tokens": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2"
    }
}
